{
  "root": true,
  "parser": "@babel/eslint-parser",
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true
      }
    ]
    //    "default-case": "warn",
    //    "no-param-reassign": "off",
    //    "no-console": "off",
    //    "prefer-const": "warn",
    //    "no-var": "warn",
    //    "semi": "warn",
    //    "padded-blocks": "warn",
    //    "space-before-blocks": "warn",
    //    "quotes": "warn"
  },
  "plugins": [
    "prettier"
  ]
}